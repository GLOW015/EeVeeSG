<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".boundary.nearby">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#252525"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText

            android:id="@+id/editTextKeyword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="128dp"
            android:layout_marginBottom="83dp"
            android:background="@drawable/mapsearchedittextcustom"
            android:drawableStart="@drawable/ic_magnifying_glass"
            android:drawablePadding="40dp"
            android:ems="10"
            android:hint="search..."
            android:inputType="textPersonName"
            android:textCursorDrawable="@drawable/mapsearchedittextcustomcursor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nearbytitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nearby Places"
            android:textColor="@color/white"
            android:textSize="32sp"
            tools:layout_editor_absoluteX="101dp"
            tools:layout_editor_absoluteY="51dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="171dp"
        android:backgroundTint="#0ED689"
        android:text="search nearby"
        android:textColor="#ffffff"
        android:textSize="26sp"
        android:textStyle="bold"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toTopOf="@+id/listViewPlaces"
        app:layout_constraintStart_toStartOf="@+id/listViewPlaces"
        app:layout_constraintTop_toTopOf="parent" />


    <ListView
        android:id="@+id/listViewPlaces"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSearch" />

</androidx.constraintlayout.widget.ConstraintLayout>